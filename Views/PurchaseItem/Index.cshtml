@model IEnumerable<bilihan_online.Models.PurchaseItemModel>

@{
    ViewData["Title"] = "Order Taking";
}

<h1>Order Taking</h1>
<div class="row col-md-12">
    <div class="col-md-9">
        <form id="GetCustomerForm">
            @Html.AntiForgeryToken()
            <div class="row mb-3">
                <label for="Customer" class="col-sm-2 col-form-label">Customer</label>
                <div class="col-sm-10">
                    <input id="Customer" class="form-control" type="text" placeholder="Search Customer" aria-label="Search" required />
                    <div class="collapse" id="searchDiv">
                        <div class="card list-group" id="customerSearchResult">
                            <a class="list-group-item d-flex justify-content-between align-items-center" id="selectedCustomer" href="#" type="button">No Results</a>
                        </div>
                    </div>
                </div>
                <div class="col-auto">
                    <span id="spanCustomer" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="DeliveryDate" class="col-sm-2 col-form-label">Delivery Date</label>
                <div class="col-sm-10">
                    <input id="DeliveryDate" class="form-control" data-provide="datepicker" required />
                </div>
                <div class="col-auto">
                    <span id="spanDeliveryDate" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="Status" class="col-sm-2 col-form-label">Status</label>
                <div class="col-sm-10">
                    <select id="Status" class="form-select">
                        <option selected value="New">New</option>
                        <option value="Completed">Completed</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                </div>
                <div class="col-auto">
                    <span id="spanStatus" class="text-danger"></span>
                </div>

            </div>
        </form>
    </div>

</div>
<p>
    <button id="btnCreate" type="button" class="btn btn-primary" data-bs-toggle="modal"
            data-bs-target="#modalCreateNew">
        Add Item
    </button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Timestamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Timestamp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserID)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Create Modal -->
<div class="modal fade" id="modalCreateNew" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Create New</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form class="row" id="addProductItemForm">
                            <div class="form-group">
                                <label for="SKUName" class="control-label">SKU</label>
                                <input id="SKUName" class="form-control" type="text" placeholder="Search Products" aria-label="Search" required />
                                <div class="collapse" id="searchSKUDiv">
                                    <div class="card list-group" id="productSearchResult">
                                        <a class="list-group-item d-flex justify-content-between align-items-center" id="selectedSKU" href="#" type="button">No Results</a>
                                    </div>
                                </div>
                                <span id="spanSKUName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Quantity" class="control-label">Quantity</label>
                                <input id="Quantity" class="form-control" required />
                                <span id="spanQuantity" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="SubTotal" class="control-label">Sub Total</label>
                                <input id="SubTotal" class="form-control" required disabled />
                                <span id="spanSubTotal" class="text-danger"></span>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnSubmit" data-bs-toggle="modal"
                        data-bs-target="#confirmationModal">
                    Submit
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="modalEdit" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Edit</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">

                        <form class="row" id="editProductItemForm">
                            <div class="form-group">
                                <label for="edtFirstName" class="control-label">First Name</label>
                                <input id="edtFirstName" class="form-control" required />
                                <span id="edtSpanFirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="edtLastName" class="control-label">Last Name</label>
                                <input id="edtLastName" class="form-control" required />
                                <span id="edtspanLastName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="edtFullName" class="control-label">Full Name</label>
                                <input id="edtFullName" class="form-control" disabled />
                            </div>
                            <div class="form-group">
                                <label for="edtMobileNumber" class="control-label">Mobile Number</label>
                                <input id="edtMobileNumber" class="form-control" required />
                                <span id="edtSpanMobileNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="edtCity" class="control-label">City</label>
                                <input id="edtCity" class="form-control" required />
                                <span id="edtSpanCity" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="edtDateCreated" class="control-label">Date Created</label>
                                <input id="edtDateCreated" class="form-control" disabled />
                            </div>
                            <div class="form-group">
                                <label for="edtCreatedBy" class="control-label">Created By</label>
                                <input id="edtCreatedBy" class="form-control" disabled />
                            </div>
                            <div class="form-group">
                                <label for="edtTimestamp" class="control-label">Timestamp</label>
                                <input id="edtTimestamp" class="form-control" disabled />
                            </div>
                            <div class="form-group">
                                <label for="edtUserID" class="control-label">User ID</label>
                                <input id="edtUserID" class="form-control" disabled />
                            </div>

                            <div class="form-group">
                                <div class="form-check">
                                    <input id="edtIsActive" class="form-check-input" type="checkbox" />
                                    <label for="edtIsActive" class="form-check-label">Is Active</label>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnEdtSubmit" data-bs-toggle="modal"
                        data-bs-target="#confirmationModal">
                    Submit
                </button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        var addActionURL = '@Url.Action("JsonCreate")';
        var editActionURL = '@Url.Action("JsonEdit")';
        var customerSearchURL = '@Url.Action("JsonGetCustomer")';
        var productSearchURL = '@Url.Action("JsonGetSKU")';
    </script>
    <script src="~/js/pages/purchaseitem.js" asp-append-version="true"></script>
}